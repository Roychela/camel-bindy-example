<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:camel="http://camel.apache.org/schema/spring" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring-2.10.1.xsd">

	<camelContext trace="false"	xmlns="http://camel.apache.org/schema/spring">

		<camel:route id="students-fetch-route" autoStartup="true">
			<camel:from uri="file:inbox?noop=true&amp;delay=10" />
			<camel:split streaming="true">
				<camel:tokenize token="\n" group="1000" />
				<unmarshal ref="bindyDataformat">
					<camel:bindy type="Csv"  classType="org.apache.camel.example.Student"/>
				</unmarshal>
				<camel:log message="line is  ${body}" loggingLevel="WARN" />
			</camel:split>
		</camel:route>

	</camelContext>
</beans>


